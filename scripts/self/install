#!/usr/bin/env bash

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"

export ZIM_HOME="$DOTFILES_PATH/modules/zimfw"

if platform::is_macos; then
  output::write "üçé Setting up macOS platform"
  install_macos_custom
fi

script::depends_on fzf zsh

##? Install and setup dotfiles
##?
##? Usage:
##?    install

output::write "Setting up symlinks"
"$DOTFILES_PATH/bin/dot" symlinks apply | log::file "Applying symlinks" || true

output::write "Installing zim"
zsh "$ZIM_HOME/zimfw.zsh" install | log::file "Installing zim"

output::write "Installing languages"
"$DOTFILES_PATH/bin/dot" golang install | log::file "Installing golang"
"$DOTFILES_PATH/bin/dot" java install | log::file "Installing java"


output::write "Installing docker"
"$DOTFILES_PATH/bin/dot" docker install | log::file "Installing docker"

output::write "Installing docker-compose"
"$DOTFILES_PATH/bin/dot" dockercompose install | log::file "Installing docker-compose"

output::write "Setup workspace folder"
mkdir "$HOME/Develop" | log::file "Setuping workspace folder"

output::write "Installing completions"
"$DOTFILES_PATH/bin/dot" shell zsh reload_completions | log::file "Installing completions"