#!/usr/bin/env bash

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/platform_install.sh"

export ZIM_HOME="$DOTFILES_PATH/modules/zimfw"


##? Install and setup dotfiles
##?
##? Usage:
##?    install

docs::parse "$@"

if platform::is_macos; then
  output::write "üçé Setting up macOS platform"
  
  if ! platform::command_exists brew; then
    output::error "brew not installed, installing"

    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  fi

  if platform::is_macos_arm; then
    export PATH="$PATH:/opt/homebrew/bin:/usr/local/bin"
  else
    export PATH="$PATH:/usr/local/bin"
  fi
  
fi

script::depends_on cargo

export PATH="$HOME/.cargo/bin:$PATH"

script::depends_on docpars fzf zsh python

output::write "Setting up symlinks"
"$DOTFILES_PATH/bin/dot" symlinks apply | log::file "Applying symlinks" || true

output::write "Installing zim"
zsh "$ZIM_HOME/zimfw.zsh" install | log::file "Installing zim"

output::write "Installing completions"
"$DOTFILES_PATH/bin/dot" shell zsh reload_completions | log::file "Installing completions"
