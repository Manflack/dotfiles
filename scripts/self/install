#!/usr/bin/env bash

source "$DOTFILES_PATH/scripts/core/_main.sh"
source "$DOTFILES_PATH/scripts/self/utils/install.sh"

export ZIM_HOME="$DOTFILES_PATH/modules/zimfw"

if platform::is_macos; then
  output::write "üçé Setting up macOS platform"
  install_macos_custom
fi

script::depends_on fzf zsh

##? Install and setup dotfiles
##?
##? Usage:
##?    install

output::write "Setting up symlinks"
"$DOTFILES_PATH/bin/dot" symlinks apply | log::file "Applying symlinks" || true
touch "$HOME/.z"

if ! str::contains zsh "$SHELL"; then
  output::write "Setting zsh as the default shell"
  sudo chsh -s "$(command -v zsh)" | log::file "Setting zsh as default shell"
fi

output::write "Installing zim"
zsh "$ZIM_HOME/zimfw.zsh" install | log::file "Installing zim"

output::write "Installing completions"
"$DOTFILES_PATH/bin/dot" shell zsh reload_completions

output::write "Installing languages"
"$DOTFILES_PATH/bin/dot" languages isntall
