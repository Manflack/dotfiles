#!/usr/bin/env bash

set -euo pipefail

source "$DOTFILES_PATH/scripts/core/_main.sh"

##? Update dotfiles to the latest stable release
##?
##? Usage:
##?    update
docs::parse "$@"

sudo -v

cd "$DOTFILES_PATH"

git reset --hard
git checkout master
git pull origin master
sudo chmod -R 755 $DOTFILES_PATH
sudo chown -R $(whoami) $DOTFILES_PATH
git::setup_identity

output::answer 'âœ… dotfiles updated to the latest version'